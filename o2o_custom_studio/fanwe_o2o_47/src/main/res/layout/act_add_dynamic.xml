        <LinearLayout
            android:id="@+id/ll_select_expression"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_white_gray"
            android:gravity="center" >

            <ImageView
                android:id="@+id/iv_select_expression"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_add_dynamic_expression_normal" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/stroke_deep" />

    <FrameLayout
        android:id="@+id/act_add_dynamic_fl_expression"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >
