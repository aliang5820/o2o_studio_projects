<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_title_bar"
    android:background="@color/bg_title_bar" >

    <TextView
        android:id="@+id/frag_home_title_bar_tv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="46dip"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dip"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/title_text_size" />

    <LinearLayout
        android:id="@+id/frag_home_title_bar_ll_earn"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:background="@drawable/selector_title_color"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <TextView
            android:id="@+id/frag_home_title_bar_tv_earn"
            style="@style/text_base"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="沈阳"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/frag_home_title_bar_iv_earn_arrow"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_arrow_down_white" />
    </LinearLayout>

    <!-- <LinearLayout -->
    <!-- android:id="@+id/frag_home_title_bar_ll_location" -->
    <!-- android:layout_width="50dp" -->
    <!-- android:layout_height="fill_parent" -->
    <!-- android:layout_toLeftOf="@+id/frag_home_title_bar_ll_search" -->
    <!-- android:background="@drawable/selector_title_color" -->
    <!-- android:gravity="center" -->
    <!-- android:orientation="horizontal" > -->


    <!-- <ImageView -->
    <!-- android:layout_width="wrap_content" -->
    <!-- android:layout_height="wrap_content" -->
    <!-- android:scaleType="centerInside" -->
    <!-- android:src="@drawable/ic_location_home_top" /> -->
    <!-- </LinearLayout> -->

    <LinearLayout
        android:id="@+id/frag_home_title_bar_ll_search"
        android:layout_width="50dp"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/selector_title_color"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/ic_search_home_top" />
    </LinearLayout>

</RelativeLayout>