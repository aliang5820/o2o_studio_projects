<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- 收货人姓名 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layer_white_stroke_bot"
                android:gravity="center_vertical" >

                <com.fanwe.library.customview.ClearEditText
                    android:id="@+id/act_add_delivery_address_et_consignee"
                    style="@style/edit_base"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="收货人姓名"
                    android:paddingLeft="10dp"
                    android:singleLine="true" />
            </LinearLayout>

            <!-- 手机号码 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layer_white_stroke_bot"
                android:gravity="center_vertical" >

                <com.fanwe.library.customview.ClearEditText
                    android:id="@+id/act_add_delivery_address_et_phone"
                    style="@style/edit_base"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="手机号码"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:singleLine="true" />
            </LinearLayout>

            <!-- 邮政编码 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layer_white_stroke_bot"
                android:gravity="center_vertical" >

                <com.fanwe.library.customview.ClearEditText
                    android:id="@+id/act_add_delivery_address_et_postcode"
                    style="@style/edit_base"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="邮政编码"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:singleLine="true" />
            </LinearLayout>

            <!-- 省市区 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layer_white_stroke_bot"
                android:gravity="center_vertical"
                android:paddingLeft="10dp" >

                <TextView
                    android:id="@+id/act_add_delivery_address_tv_delivery"
                    style="@style/text_base"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:minHeight="50dp"
                    android:text="省、市 、区"
                    android:textColor="@color/black" />
            </LinearLayout>

            <!-- 详细地址 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layer_white_stroke_bot"
                android:gravity="center_vertical" >

                <com.fanwe.library.customview.ClearEditText
                    android:id="@+id/act_add_delivery_address_et_address_detail"
                    style="@style/edit_base"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|top"
                    android:hint="详细地址"
                    android:minHeight="100dp"
                    android:paddingLeft="10dp"
                    android:singleLine="false" />
            </LinearLayout>

            <TextView
                android:id="@+id/act_add_delivery_address_tv_submit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/selector_main_color_corner"
                android:gravity="center"
                android:text="提交"
                android:textColor="#ffffff"
                android:textSize="17sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>