<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_activity_gray"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/layer_gray_stroke_all"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="选择充值金额（元）"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_money_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/layer_white_stroke_all"
            android:gravity="center"
            android:padding="5dp"
            android:text="20"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_money_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/layer_white_stroke_all"
            android:gravity="center"
            android:padding="5dp"
            android:text="50"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_money_three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/layer_white_stroke_all"
            android:gravity="center"
            android:padding="5dp"
            android:text="100"
            android:textColor="@color/gray"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_money_four"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/layer_white_stroke_all"
            android:gravity="center"
            android:padding="5dp"
            android:text="200"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_money_five"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/layer_white_stroke_all"
            android:gravity="center"
            android:padding="5dp"
            android:text="500"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_money_other"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/layer_white_stroke_all"
            android:gravity="center"
            android:hint="其它金额"
            android:inputType="numberDecimal"
            android:padding="5dp"
            android:textColor="@color/gray"
            android:textColorHint="@color/gray"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/layer_gray_stroke_all"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="选择充值方式"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <com.fanwe.library.customview.SDGridLinearLayout
        android:id="@+id/ll_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/selector_main_color_corner"
        android:gravity="center"
        android:minHeight="40dp"
        android:text="确认充值"
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>