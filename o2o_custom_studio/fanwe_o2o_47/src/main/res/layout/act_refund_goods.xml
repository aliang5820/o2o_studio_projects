<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_activity_gray"
    android:orientation="vertical" >

    <com.fanwe.customview.SDStickyScrollView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ssv_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_deals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_coupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:visibility="gone" >
            </LinearLayout>

            <EditText
                android:id="@+id/et_content"
                style="@style/edit_base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/layer_white_stroke_all"
                android:gravity="top|left"
                android:hint="请输入退款理由"
                android:minHeight="200dp"
                android:padding="10dp" />

            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/selector_main_color_corner"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="19sp" />
        </LinearLayout>
    </com.fanwe.customview.SDStickyScrollView>

</LinearLayout>