<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray2"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可提现金额:"
            android:textColor="@color/black1" />

        <TextView
            android:id="@+id/tv_act_mywithdrawals_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/black1"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:textColor="@color/black1" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_act_mywithdrawals_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/input_biankuan"
        android:hint="请输入提现金额"
        android:inputType="numberDecimal"
        android:padding="10dp" />

    <LinearLayout
        android:id="@+id/ll_act_mywithdrawals_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:visibility="visible" >

        <EditText
            android:id="@+id/et_act_mywithdrawals_code"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:background="@drawable/verification_code_biankuang"
            android:hint="请输入验证码"
            android:inputType="number"
            android:padding="5dp"
            android:textColor="@color/black0" />

        <com.fanwe.library.customview.SDSendValidateButton
            android:id="@+id/btn_act_mywithdrawals_send"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/verfication_send_biankuang"
            android:gravity="center"
            android:text="发送验证码"
            android:textColor="@color/black1" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_act_mywithdrawals_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/input_biankuan"
        android:hint="请输入密码"
        android:padding="10dp"
        android:inputType="textPassword"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_act_mywithdrawals_apply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/base_margin_10"
        android:background="@drawable/selector_theme_color_corner"
        android:gravity="center"
        android:padding="@dimen/base_padding_10"
        android:text="申请提现"
        android:textColor="@color/white" />

</LinearLayout>