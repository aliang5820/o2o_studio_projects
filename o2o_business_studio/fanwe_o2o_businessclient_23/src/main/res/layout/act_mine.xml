<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_all"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/bg_title_bar"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="商户个人中心"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/base_margin_10"
                android:layout_marginTop="@dimen/base_margin_10"
                android:orientation="horizontal"
                android:padding="@dimen/base_padding_10">

                <ImageView
                    android:id="@+id/user_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="@dimen/base_margin_10"
                    android:src="@drawable/icon" />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/user_icon"
                    android:text="芭菲盛宴餐饮有限公司"
                    android:textSize="@dimen/text_size_button" />

                <TextView
                    android:id="@+id/user_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_name"
                    android:layout_marginTop="@dimen/base_margin_10"
                    android:layout_toRightOf="@+id/user_icon"
                    android:drawableLeft="@drawable/icon_warning"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:text="修改密码"
                    android:textSize="@dimen/text_size_content" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_stroke_1px"
                android:background="@color/stroke_deep" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/base_padding_10">

                <EditText
                    android:id="@+id/user_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edit_bg"
                    android:inputType="phone"
                    android:padding="@dimen/base_padding_10" />

                <Button
                    android:id="@+id/confirmBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/base_margin_20"
                    android:background="@drawable/selector_main_color_corner"
                    android:padding="@dimen/base_padding_10"
                    android:text="验证"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_stroke_1px"
                android:background="@color/stroke_deep" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/base_padding_10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="团购订单管理"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_button" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_arrow_right_more"
                    android:gravity="center_vertical"
                    android:text="查看全部订单"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_button" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_stroke_1px"
                android:background="@color/stroke_deep" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selector_apply_item"
                    android:gravity="center"
                    android:paddingBottom="@dimen/base_padding_10"
                    android:paddingTop="@dimen/base_padding_10"
                    android:text="待付款(1)"
                    android:textSize="12sp" />

                <View
                    android:layout_width="@dimen/base_stroke_1px"
                    android:layout_height="match_parent"
                    android:background="@color/stroke_deep" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selector_apply_item"
                    android:gravity="center"
                    android:paddingBottom="@dimen/base_padding_10"
                    android:paddingTop="@dimen/base_padding_10"
                    android:text="待使用(1)"
                    android:textSize="12sp" />

                <View
                    android:layout_width="@dimen/base_stroke_1px"
                    android:layout_height="match_parent"
                    android:background="@color/stroke_deep" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selector_apply_item"
                    android:gravity="center"
                    android:paddingBottom="@dimen/base_padding_10"
                    android:paddingTop="@dimen/base_padding_10"
                    android:text="待评价(1)"
                    android:textSize="12sp" />

                <View
                    android:layout_width="@dimen/base_stroke_1px"
                    android:layout_height="match_parent"
                    android:background="@color/stroke_deep" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selector_apply_item"
                    android:gravity="center"
                    android:paddingBottom="@dimen/base_padding_10"
                    android:paddingTop="@dimen/base_padding_10"
                    android:text="售后/退款(1)"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_stroke_1px"
                android:background="@color/stroke_deep" />

            <TextView
                style="@style/MineMenuItemStyle"
                android:text="商城订单管理" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_stroke_1px"
                android:background="@color/stroke_deep" />

            <TextView
                style="@style/MineMenuItemStyle"
                android:text="点评管理" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_stroke_1px"
                android:background="@color/stroke_deep" />

            <TextView
                style="@style/MineMenuItemStyle"
                android:text="项目管理" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_stroke_1px"
                android:background="@color/stroke_deep" />

            <TextView
                style="@style/MineMenuItemStyle"
                android:text="财务管理" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_stroke_1px"
                android:background="@color/stroke_deep" />

            <TextView
                style="@style/MineMenuItemStyle"
                android:text="银行卡账户管理" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_stroke_1px"
                android:background="@color/stroke_deep" />

            <TextView
                style="@style/MineMenuItemStyle"
                android:text="物流管理" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_stroke_1px"
                android:background="@color/stroke_deep" />

            <TextView
                style="@style/MineMenuItemStyle"
                android:text="自媒体" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_stroke_1px"
                android:background="@color/stroke_deep" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>